<section class="col-12 bg-light">
  <div class="container-fluid p-5">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <h2 class="form-password-reset--heading">Reset your password</h2>
        <hr/>
        <%= form_tag("/password_reset", method: :post) do %>
          <div class="form-group">
            <%= label_tag :login, "Login" %>
            <%= text_field_tag :login, params[:email], class: "form-control" %>
          </div>

          <%= button_tag "Reset password", class: "btn btn-lg btn-primary btn-block" %>

        <% end %>
      </div>
    </div>
  </div>
</section>